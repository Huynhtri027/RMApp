<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.kagan.helloworld.TodayActivity"
    android:id="@+id/today">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Example Restaurant"
        android:id="@+id/lbl_restaname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReservatÄ±ons"
        android:id="@+id/btn_rezerv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="viewReservations"
        android:layout_below="@+id/lbl_restaname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payments"
        android:id="@+id/btn_payments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="viewPayments"
        android:layout_below="@+id/btn_rezerv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debts"
        android:id="@+id/btn_debt"
        android:layout_below="@+id/btn_payments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_payments"
        android:layout_alignEnd="@+id/btn_payments"
        android:onClick="viewDebts" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:id="@+id/btn_stock"
        android:layout_below="@+id/btn_debt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="viewStock" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to do list"
        android:id="@+id/btn_todo"
        android:layout_below="@+id/btn_stock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="viewToDoList" />

</RelativeLayout>
